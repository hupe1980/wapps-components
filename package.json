{
  "private": true,
  "name": "wapps-components",
  "license": "MIT",
  "scripts": {
    "build": "lerna exec --parallel -- BABEL_ENV=build babel src -d lib --root-mode upward --delete-dir-on-start",
    "build:watch": "lerna exec --parallel -- BABEL_ENV=build babel src -d lib  --root-mode upward --watch --delete-dir-on-start",
    "clean": "lerna clean",
    "format": "prettier-eslint --write \"packages/*/src/**/*.js\"",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "deploy-storybook": "storybook-to-ghpages",
    "test": "jest --env=jsdom",
    "test:watch": "jest --watch --env=jsdom",
    "prepare": "npm run build",
    "publish": "lerna publish",
    "coverage": "jest --coverage"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.3.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.2",
    "@babel/plugin-transform-modules-commonjs": "^7.2.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "@storybook/addon-actions": "^4.1.13",
    "@storybook/addon-options": "^4.1.13",
    "@storybook/addon-storyshots": "^4.1.13",
    "@storybook/addon-storysource": "^4.1.13",
    "@storybook/react": "^4.1.13",
    "@storybook/storybook-deployer": "^2.3.0",
    "babel-jest": "^24.1.0",
    "babel-plugin-macros": "^2.5.0",
    "enzyme": "^3.4.4",
    "enzyme-adapter-react-16": "^1.2.0",
    "eslint": "^5.0.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-config-react-app": "^3.0.7",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.8.1",
    "jest": "^24.1.0",
    "lerna": "^3.13.0",
    "prettier": "^1.12.1",
    "prettier-eslint-cli": "^4.7.1",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "react-test-renderer": "^16.3.2",
    "require-context.macro": "^1.0.4"
  },
  "jest": {
    "setupFiles": [
      "./scripts/setupTests.js"
    ],
    "testMatch": [
      "**/?(*.)+(spec|test).js?(x)"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    },
    "collectCoverageFrom": [
      "packages/*/src/**/*.js",
      "!**/__tests__/**",
      "!**/__stories__/**"
    ]
  }
}
